# Keyboards
input "type:keyboard" {
      xkb_layout us,gr
      repeat_delay 330
      repeat_rate 25
      xkb_options grp:win_space_toggle,eurosign:e
      xkb_numlock enabled
}

# Mice
input "5426:96:Razer_Razer_Lancehead_Tournament_Edition" {
      accel_profile flat
      # pointer_accel -0.6
      scroll_factor 1.75
}