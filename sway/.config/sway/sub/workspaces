exec rm -f /tmp/sov && mkfifo /tmp/sov && tail -f /tmp/sov | sov

# Switch to workspace
bindsym --no-repeat $mod+1 workspace $ws1 ; exec "echo 1 > /tmp/sov"
bindsym --no-repeat $mod+2 workspace $ws2; exec "echo 1 > /tmp/sov"
bindsym --no-repeat $mod+3 workspace $ws3; exec "echo 1 > /tmp/sov"
bindsym --no-repeat $mod+4 workspace $ws4; exec "echo 1 > /tmp/sov"
bindsym --no-repeat $mod+5 workspace $ws5; exec "echo 1 > /tmp/sov"
bindsym --no-repeat $mod+6 workspace $ws6; exec "echo 1 > /tmp/sov"
bindsym --no-repeat $mod+7 workspace $ws7; exec "echo 1 > /tmp/sov"
bindsym --no-repeat $mod+8 workspace $ws8; exec "echo 1 > /tmp/sov"
bindsym --no-repeat $mod+9 workspace $ws9; exec "echo 1 > /tmp/sov"
bindsym --no-repeat $mod+0 workspace $ws10; exec "echo 1 > /tmp/sov"

bindsym --release $mod+1 exec "echo 0 > /tmp/sov"
bindsym --release $mod+2 exec "echo 0 > /tmp/sov"
bindsym --release $mod+3 exec "echo 0 > /tmp/sov"
bindsym --release $mod+4 exec "echo 0 > /tmp/sov"
bindsym --release $mod+5 exec "echo 0 > /tmp/sov"
bindsym --release $mod+6 exec "echo 0 > /tmp/sov"
bindsym --release $mod+7 exec "echo 0 > /tmp/sov"
bindsym --release $mod+8 exec "echo 0 > /tmp/sov"
bindsym --release $mod+9 exec "echo 0 > /tmp/sov"
bindsym --release $mod+0 exec "echo 0 > /tmp/sov"

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10
