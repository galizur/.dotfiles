# Include directories
include configs/sets
include configs/settings
include configs/outputs
include configs/inputs
include configs/mappings
include configs/workspaces
include configs/programs
include configs/layouts
include configs/modes
include configs/swaybar

set $WOBSOCK $XDG_RUNTIME_DIR/wob.sock
exec mkfifo $WOBSOCK && tail -f $WOBSOCK | wob

set $gnome-schema org.gnome.desktop.interface

exec_always import-gsettings \
            gtk-theme:gtk-theme-name \
            icon-theme:gtk-icon-theme-name \
            cursor-theme:gtk-cursor-theme-name

### Startup programs ###
exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway

exec --no-startup-id [ -f $XDG_BIN_HOME/autostart.sh ] && . "$XDG_BIN_HOME/autostart.sh"